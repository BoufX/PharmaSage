<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>

<% if  user_signed_in? && current_user.admin? %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
  <%= link_to "Admin", rails_admin_path, class: "btn btn-secondary" %>
<% elsif user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
<% else %>
  <%= link_to "Sign in", new_user_session_path, method: :delete, class: "btn btn-primary" %>
<% end %>
